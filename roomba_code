#include "ros/ros.h"
#include <math.h>
#include "geometry_msgs/Twist.h"
#include "std_msgs/String.h"
#include <time.h>


/**
   Some of the code was taken from: http://guitarpenguin.is-programmer.com/posts/58100.html
   by, Harsh Patel
   Date: 07/25/2015

 */
   
int main(int argc, char **argv)
{
  srand(time(NULL));
  ros::init(argc, argv, "CreateController");

  ros::NodeHandle n;

  ros::Publisher vel_pub = n.advertise<geometry_msgs::Twist>("/cmd_vel", 1);

  ros::Rate loop_rate(1);
  
  int count = 0;
  int new_angle = 0;
  
  // This is where the 
  time_t start = time(0);
  int five_x = 0;
  float elapsed_time = 0.0;
  // Stopped here
  while (ros::ok())
  {
    geometry_msgs::Twist cmd_vel;


    cmd_vel.linear.x = 1;
    cmd_vel.linear.y = 0;
    cmd_vel.linear.z = 0;
    
    elapsed_time = difftime(time(0),start);
    ROS_INFO("elapsed_time  = %f",elapsed_time);
    if(elapsed_time == 5.0)
    {
      new_angle += rand()%20;
      cmd_vel.angular.x = 0;
      cmd_vel.angular.y = 0;
      cmd_vel.angular.z = new_angle;
      ROS_INFO("Inside : elapsed_time  = %f",elapsed_time);
      ROS_INFO("New angle: %i",new_angle);
      elapsed_time = 0;
      start = time(0);
      five_x++;
      //start = time(0);
    }
    if(five_x == 4)
    {
      cmd_vel.angular.x = 0;
      cmd_vel.angular.y = 0;
      // Flip it.
      cmd_vel.angular.z = -1*new_angle;
      new_angle = -1*new_angle;
      five_x = 0;
      ROS_INFO("Inside : elapsed_time  = %f",elapsed_time);
     // ROS_INFO("New angle: %i",new_angle);
   //   ROS_INFO("New angle: %s",cmd_vel.angular.z);

      //start = time(0);
    }

    vel_pub.publish(cmd_vel);

    ros::spinOnce();

    loop_rate.sleep();

    ++count;
  }

  return 0;
}
